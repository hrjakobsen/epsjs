% https://www.adobe.com/jp/print/postscript/pdfs/PLRM.pdf#page=595
systemdict begin
  /errordict 32 dict def
  /$error 12 dict def
  errordict begin
    /handleerror {
      % Default error handler
      (Unhandled error) =
    } def
  end

  [
    /dictfull /dictstackoverflow /dictstackunderflow /execstackoverflow
    /interrupt /invalidaccess /invalidexit /invalidfileaccess /invalidfont
    /invalidrestore /ioerror /limitcheck /nocurrentpoint /rangecheck
    /stackoverflow /stackunderflow /syntaxerror /timeout /typecheck /undefined
    /undefinedresource /undefinedresult /unmatchedmark /unregistered /VMerror
  ]
  {
    % Stack: /ErrorName
    errordict exch % errordict, /ErrorName(key)
    [
      /$error load /newerror true /put load
      /$error load /errorname 7 index
      /put load
      /$error load  /errorobject /exch /put load
      /stop load
    ] cvx
    put
  } forall

  errordict begin
    /undefinedfilename { undefined } def
  end

end